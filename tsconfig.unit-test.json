{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node"
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"],
		"esm": false,
		"experimentalSpecifierResolution": "node",
		"transpileOnly": true,
